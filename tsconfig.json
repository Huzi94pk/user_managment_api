{
  "compilerOptions": {
    "target": "ES6",                         // Set the JavaScript language version for emitted JavaScript
    "module": "commonjs",                    // Specify module code generation
    "outDir": "./dist",                      // Redirect output structure to the directory
    "rootDir": "./src",                      // Specify the root folder within your source files
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure that casing is consistent in imports
  },
  "include": ["src/**/*.ts"],                // Specify which files to include in the project
  "exclude": ["node_modules"]                // Exclude the node_modules directory
}
